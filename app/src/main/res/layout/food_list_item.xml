<?xml version="1.0" encoding="utf-8"?>
<!-- Food list item layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large"
    android:orientation="vertical">
    <!-- Restaurant or bar name -->
    <TextView
        style="@style/restaurant_name"
        android:id="@+id/restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!-- Description of the kind of food you can eat here -->
    <TextView
        android:id="@+id/restaurant_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_standard" />
    <!-- Address -->
    <TextView
        android:id="@+id/restaurant_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!-- Telephone and price on the same line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Telephone -->
        <TextView
            android:id="@+id/restaurant_telephone"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />
        <!-- Price -->
        <TextView
            style="@style/restaurant_price"
            android:id="@+id/restaurant_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>