<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- App bar style -->
    <style name="PaduAppBarStyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>
    <!-- ACTIVITY MAIN -->
    <!-- main linear layout -->
    <style name="main_linear_layout">
        <item name="android:layout_margin">@dimen/margin_standard</item>
    </style>
    <!-- title horizontal layout -->
    <style name="title_horizontal_layout">
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- city name -->
    <style name="city_name">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>
    <!-- city arms -->
    <style name="city_arms">
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/padua_arms</item>
    </style>
    <!-- intro -->
    <style name="intro">
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- start button -->
    <style name="start_button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/margin_standard</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- map image cliccable -->
    <style name="map">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:src">@drawable/ic_map_black_36dp</item>
        <item name="android:scaleType">center</item>
    </style>
    <style name="history_title">
        <item name="android:paddingBottom">@dimen/padding_standard</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="history_text">
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
    </style>
    <!-- Style for a tab that displays a section name -->
    <style name="section_tab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <!-- PLACE_LIST_ITEM -->
    <!-- Place Image -->
    <style name="place_image">
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!-- Place name -->
    <style name="place_name">
        <item name="android:layout_above">@id/place_description</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_place_name</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- Place description -->
    <style name="place_description">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_standard</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- FOOD LIST ITEM -->
    <!-- Restaurant name -->
    <style name="restaurant_name">
        <item name="android:paddingBottom">@dimen/padding_standard</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_restaurant_name</item>
    </style>
    <style name="restaurant_price">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
